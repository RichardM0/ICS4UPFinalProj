
/**
 * Write a description of class GravityPointer here.
 *
 * @author (your name)
 * @version (a version number or a date)
 */
public class GravityPointer
{
    // instance variables - replace the example below with your own
    private double x, y;
    public static int radius = 20;
    public static double mass = 1.3e13;

    /**
     * Constructor for objects of class GravityPointer
     */
    public GravityPointer()
    {
        x = 0;
        y = 0;
    }
    public GravityPointer(double x, double y)
    {
        this.x = x;
        this.y = y;
    }
    public void setX(double newX){
        x = newX;
    }
    public void setY(double newY){
        y = newY;
    }
    public static void setMass(double newMass){
        mass = newMass;
    }
    public double getX(){
        return x;
    }
    public double getY(){
        return y;
    }
}
